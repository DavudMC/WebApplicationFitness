@model List<TrainerGetVM>
<div class="container">
    <div class="row">
        <div class="col-2">
            <a asp-action="Create"  class="btn btn-success">Create</a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Profession</th>
                    <th scope="col">ImagePath</th>
                    <th scope="col">Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var trainer in Model)
                {
                    <tr>
                        <th scope="row">@trainer.Id</th>
                        <td>@trainer.Name</td>
                        <td>@trainer.Profession</td>
                        <td>@trainer.ImagePath</td>
                        <td>@trainer.Description</td>
                        <td>
                            <a asp-action="Delete"  asp-route-id="@trainer.Id" class="btn btn-danger">Delete</a>
                            <a asp-action="Update"  asp-route-id="@trainer.Id" class="btn btn-warning">Update</a>
                        </td>
                    </tr>
                    
                }


            </tbody>
        </table>
    </div>
</div>
